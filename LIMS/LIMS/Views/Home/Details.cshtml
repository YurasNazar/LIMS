@model User
@{
    ViewBag.Title = "Details Page";
}
@section Scripts {
    <script src="~/js/home/userDetails.js"></script>
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.FirstName</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/ProfilePicture.png" asp-append-version="true"/>
                <h4>Employee ID : @Model.Id</h4>
                <h4>Email : @Model.Email</h4>
                <h4>Group : @Model.Group</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>